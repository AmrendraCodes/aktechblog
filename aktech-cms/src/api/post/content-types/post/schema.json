{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": { "singularName": "post", "pluralName": "posts", "displayName": "Post" },
  "options": { "draftAndPublish": true },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "required": true, "unique": true },
    "excerpt": { "type": "text" },
    "content": { "type": "richtext" },
    "cover": { "type": "media", "multiple": false, "required": true },
    "author": { "type": "string" },
    "category": { "type": "enumeration", "enum": ["Development","Design","General"] },
    "tags": { "type": "json" }
  }
}
